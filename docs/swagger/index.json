{
  "openapi": "3.0.1",
  "info": {
    "title": "Chat App API",
    "version": "1.0.0",
    "description": "A documentation for chat app"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "servers": [
    {
      "url": "https://localhost:8080/api/v1"
    }
  ],
  "paths": {
    "/auth/verify": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Verify user and get resources",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Verify and access successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/paths/~1user~1self/get/responses/200/content/application~1json/schema"
                }
              }
            }
          },
          "201": {
            "description": "Verify and create user successful",
            "content": {
              "application/json:": {
                "schema": {
                  "$ref": "#/paths/~1user~1self/get/responses/200/content/application~1json/schema"
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          }
        }
      }
    },
    "/user/self": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get self profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get user successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string"
                        },
                        "fullname": {
                          "type": "string"
                        },
                        "uid": {
                          "type": "string"
                        },
                        "avatar": {
                          "type": "string"
                        },
                        "phone": {
                          "type": "string"
                        },
                        "about": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "isEmailVerified": {
                          "type": "boolean"
                        },
                        "isProfileFilled": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  }
}
