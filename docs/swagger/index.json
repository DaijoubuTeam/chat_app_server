{
  "openapi": "3.0.1",
  "info": {
    "title": "Chat App API",
    "version": "1.0.0",
    "description": "A documentation for chat app"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost/api/v1"
    },
    {
      "url": "https://localhost/api/v1"
    }
  ],
  "paths": {
    "/auth/verify": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Verify user and get resources",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Verify and access successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/paths/~1user~1self/get/responses/200/content/application~1json/schema"
                }
              }
            }
          },
          "201": {
            "description": "Verify and create user successful",
            "content": {
              "application/json:": {
                "schema": {
                  "$ref": "#/paths/~1user~1self/get/responses/200/content/application~1json/schema"
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          }
        }
      }
    },
    "/auth/forgot-password": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Send reset password link",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "example@domain.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Send code successful"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/auth/reset-password": {
      "patch": {
        "tags": [
          "Auth"
        ],
        "summary": "Change user password",
        "parameters": [
          {
            "in": "query",
            "name": "token",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Reset password token"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Change password sucessful"
          },
          "400": {
            "description": "Invalid token"
          }
        }
      }
    },
    "/user/self": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get self profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get user successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string"
                        },
                        "fullname": {
                          "type": "string"
                        },
                        "uid": {
                          "type": "string"
                        },
                        "avatar": {
                          "type": "string"
                        },
                        "phone": {
                          "type": "string"
                        },
                        "about": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "isEmailVerified": {
                          "type": "boolean"
                        },
                        "isProfileFilled": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "put": {
        "tags": [
          "User"
        ],
        "summary": "Update self profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "fullname": {
                    "type": "string"
                  },
                  "uid": {
                    "type": "string"
                  },
                  "avatar": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "about": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/paths/~1user~1self/get/responses/200/content/application~1json/schema/properties/user"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          }
        }
      }
    },
    "/user/verify-email": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Request verify email mail",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Email sent"
          },
          "400": {
            "description": "Bad request. Email has been verified"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  }
}
