{
  "openapi": "3.0.0",
  "info": {
    "title": "Chat App API",
    "version": "1.0.0",
    "description": "A documentation for chat app"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost/api/v1"
    },
    {
      "url": "https://localhost/api/v1"
    }
  ],
  "paths": {
    "/auth/verify": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Verify user and get resources",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Verify and access successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/paths/~1user~1self/get/responses/200/content/application~1json/schema"
                }
              }
            }
          },
          "201": {
            "description": "Verify and create user successful",
            "content": {
              "application/json:": {
                "schema": {
                  "$ref": "#/paths/~1user~1self/get/responses/200/content/application~1json/schema"
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          }
        }
      }
    },
    "/auth/forgot-password": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Send reset password link",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "example@domain.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Send code successful"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/auth/reset-password": {
      "patch": {
        "tags": [
          "Auth"
        ],
        "summary": "Change user password",
        "parameters": [
          {
            "in": "query",
            "name": "token",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Reset password token"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Change password sucessful"
          },
          "400": {
            "description": "Invalid token"
          }
        }
      }
    },
    "/user/self": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get self profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get user successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/paths/~1user~1%7Bid%7D/get/responses/200/content/application~1json/schema"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "put": {
        "tags": [
          "User"
        ],
        "summary": "Update self profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "gender": {
                    "type": "string"
                  },
                  "fullname": {
                    "type": "string"
                  },
                  "avatar": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "about": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/paths/~1user~1%7Bid%7D/get/responses/200/content/application~1json/schema"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          }
        }
      }
    },
    "/user/verify-email": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Request verify email mail",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Email sent"
          },
          "400": {
            "description": "Bad request. Email has been verified"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/user/search": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Search user by email or phone",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "search",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Search string for email and phone"
          }
        ],
        "responses": {
          "200": {
            "description": "Get user successful",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/paths/~1user~1%7Bid%7D/get/responses/200/content/application~1json/schema"
                    },
                    {
                      "type": "object",
                      "required": [
                        "rootCause"
                      ],
                      "properties": {
                        "isFriend": {
                          "type": "boolean"
                        },
                        "isSelf": {
                          "type": "boolean"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Search string not found"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get user by id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Get user successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "gender": {
                      "type": "string"
                    },
                    "fullname": {
                      "type": "string"
                    },
                    "uid": {
                      "type": "string"
                    },
                    "avatar": {
                      "type": "string"
                    },
                    "phone": {
                      "type": "string"
                    },
                    "about": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "isEmailVerified": {
                      "type": "boolean"
                    },
                    "isProfileFilled": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/friend": {
      "get": {
        "tags": [
          "Friend"
        ],
        "summary": "Get user friends",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get user friends list successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "gender": {
                        "type": "string"
                      },
                      "fullname": {
                        "type": "string"
                      },
                      "uid": {
                        "type": "string"
                      },
                      "avatar": {
                        "type": "string"
                      },
                      "phone": {
                        "type": "string"
                      },
                      "about": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "post": {
        "tags": [
          "Friend"
        ],
        "summary": "Send friend request",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Send successful"
          },
          "400": {
            "description": "Friend id not found or request has been sent"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User not found"
          },
          "409": {
            "description": "User has been banned"
          }
        }
      }
    },
    "/friend/friend-requests": {
      "get": {
        "tags": [
          "Friend"
        ],
        "summary": "Get user friends",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get user friends list successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/paths/~1friend/get/responses/200/content/application~1json/schema"
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/friend/{id}": {
      "get": {
        "tags": [
          "Friend"
        ],
        "summary": "Accept or denied friend request or ban or unban user based on action",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "action",
            "schema": {
              "type": "string",
              "enum": [
                "accept",
                "denied",
                "ban",
                "unban"
              ]
            }
          },
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "Action successful"
          },
          "400": {
            "description": "Friend id not found or invalid action or"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User not found or friend request not found"
          },
          "409": {
            "description": "User is friend"
          }
        }
      },
      "delete": {
        "tags": [
          "Friend"
        ],
        "summary": "Delete friend",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "Delete successful"
          },
          "400": {
            "description": "Friend id not found or request has been sent"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Friend not found"
          }
        }
      }
    },
    "/chat-room": {
      "get": {
        "tags": [
          "Chatroom"
        ],
        "summary": "Get user chat rooms",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get user chat room successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chatRooms": {
                      "type": "array",
                      "items": {
                        "$ref": "#/paths/~1chat-room/post/responses/201/content/application~1json/schema"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "post": {
        "tags": [
          "Chatroom"
        ],
        "summary": "Create new Chatroom",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "chatRoomName": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Create successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chatRoomId": {
                      "type": "string"
                    },
                    "chatRoomName": {
                      "type": "string"
                    },
                    "chatRoomAvatar": {
                      "type": "string"
                    },
                    "members": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "admin": {
                      "type": "array",
                      "items": {
                        "description": "User id",
                        "type": "string"
                      }
                    },
                    "type": {
                      "type": "string",
                      "enum": [
                        "personal",
                        "group"
                      ]
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/chat-room/{chatRoomId}": {
      "put": {
        "summary": "Update chat room",
        "tags": [
          "Chatroom"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "chatRoomId",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "chatRoomName": {
                    "type": "string"
                  },
                  "chatRoomAvatar": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Update successful"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "User is not admin"
          },
          "404": {
            "description": "Chat room not found"
          },
          "409": {
            "description": "User has been in chat room"
          }
        }
      },
      "delete": {
        "summary": "Delete group chat room",
        "tags": [
          "Chatroom"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "chatRoomId",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "Delete chat room successful"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "User is not admin"
          },
          "404": {
            "description": "Chat room  not found"
          }
        }
      }
    },
    "/chat-room/{chatRoomId}/{memberId}": {
      "post": {
        "summary": "Add member to group chat room",
        "tags": [
          "Chatroom"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "chatRoomId",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "in": "path",
            "required": true,
            "name": "memberId",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Add user successful"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "User is not admin"
          },
          "404": {
            "description": "Chat room or member not found"
          },
          "409": {
            "description": "User has been in chat room"
          }
        }
      },
      "delete": {
        "summary": "Remove member from group chat room",
        "tags": [
          "Chatroom"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "chatRoomId",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "in": "path",
            "required": true,
            "name": "memberId",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Remove user successful"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "User is not admin"
          },
          "404": {
            "description": "Chat room or member not found"
          },
          "409": {
            "description": "User has been in chat room or User is admin"
          }
        }
      }
    },
    "/admin/user/{userId}": {
      "delete": {
        "tags": [
          "Dev"
        ],
        "summary": "Delete User",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "Delete successful"
          }
        }
      }
    },
    "/admin/user/seed": {
      "post": {
        "tags": [
          "Dev"
        ],
        "summary": "Seed user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  },
                  "prefix": {
                    "type": "string"
                  },
                  "suffix": {
                    "type": "string",
                    "example": "test.com"
                  },
                  "nums": {
                    "type": "number"
                  },
                  "photo": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Seed successful"
          }
        }
      }
    },
    "/message/chat-room/{chatRoomId}": {
      "post": {
        "tags": [
          "Message"
        ],
        "summary": "Send message",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "chatRoomId",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Send successful"
          },
          "400": {
            "description": "Invalid user, message or chat room"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User not found or chat room not found"
          }
        }
      }
    }
  }
}
